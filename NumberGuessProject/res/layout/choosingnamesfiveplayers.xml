<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/choosingplayersbackground" >
    
    <EditText
        android:id="@+id/etPlayer1ChoosingFivePlayers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Player1"
        android:textColor="#ffffff"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etPlayer2ChoosingFivePlayers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Player2"
        android:textColor="#ffffff"
        android:ems="10" />

    <EditText
        android:id="@+id/etPlayer3ChoosingFivePlayers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Player3"
        android:textColor="#ffffff"
        android:ems="10" >
    </EditText>

    <EditText
        android:id="@+id/etPlayer4ChoosingFivePlayers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Player4"
        android:textColor="#ffffff"
        android:ems="10" >
    </EditText>

    <EditText
        android:id="@+id/etPlayer5ChoosingFivePlayers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Player5"
        android:textColor="#ffffff"
        android:ems="10" />

    <Button
        android:id="@+id/bGoFivePlayers"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/customgobutton"
        />

</LinearLayout>
