<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/choosingplayersbackground"
    >

    <ImageButton
        android:id="@+id/bUp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:layout_alignTop="@+id/etInput"
        android:layout_toLeftOf="@+id/etInput"
        android:background="@drawable/upbutton"
        />

    <EditText
        android:id="@+id/etInput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="#6647FF"
        android:ems="10"
        android:inputType="number"
        android:textColor="#ffffff"
        android:maxLength="9"
        android:textSize="40dp" />

    <Button
        android:id="@+id/bTry"
        android:layout_width="80dp"
        android:layout_height="79dp"
        android:layout_below="@+id/bUp"
        android:layout_centerHorizontal="true"
         android:background="@drawable/customtrybutton" />

    <ImageButton
        android:id="@+id/bDown"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:layout_above="@+id/bTry"
        android:layout_toRightOf="@+id/etInput"
        android:background="@drawable/downbutton"
        />

</RelativeLayout>
